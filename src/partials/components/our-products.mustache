<section class="our-products" data-aos="fade-up">
  <div class="section-title-row">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 text-right">
          <div class="section-title" data-aos="fade-right" data-aos-delay="300">
            <h2>Our Products</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="our-products__slider" data-js="our-products__slider">
          {{#our-products-slides}}
          <div class="our-products__slider__slide">
            <div class="row">
              <div class="col-6">
                <div class="product-thumbnail">
                  <img src="img/product-1.png" alt="product">
                </div>
              </div>
              <div class="desc col-6 pl-0">
                <div class="product-title-image">
                  <img src="img/A497D04B.png" alt="product-title">
                </div>
                <div class="product-desc">
                  <p>
                    A Clean refreshing taste that energizes
                  </p>
                </div>
                <a href="#">Learn more</a>
              </div>
            </div>
          </div>
          {{/our-products-slides}}
        </div>
      </div>
    </div>
  </div>
</section>